<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrivingResultFragment"
    android:background="@color/colorPrimaryLight"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/overallResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great drive! You really did amazing!"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/speedGraph"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/percentExceededSpeedLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="You exceeded the speed limit 0 times!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/percentExceededRPMLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your vehicle had high RPM 0 times!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/smoothGraph"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="This graph shows you how smooth your drive was."
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numAcceleration"
            android:text="Number of times you accelerated too quickly - 0"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numsuddenturn"
            android:text="Number of times you made a sudden turn - 0"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numBreak"
            android:text="Number of times you had a sudden break - 0"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scoreEarned"
            android:text="+100"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="32sp"
            android:layout_margin="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will pay"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:id="@+id/textView4"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donate"
            android:text=""
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="32sp"
            android:layout_margin="16dp"
            />
    </LinearLayout>
</ScrollView>